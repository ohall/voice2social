<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<CheckBoxPreference android:title="Enable Twitter" android:key="t_on" android:summaryOff="Twitter Disabled" android:summaryOn="Twitter Enabled" android:disableDependentsState="false"></CheckBoxPreference><CheckBoxPreference android:title="Enable Facebook" android:key="f_on" android:disableDependentsState="false" android:summaryOff="Facebook Disabled" android:summaryOn="Facebook Enabled"></CheckBoxPreference><CheckBoxPreference android:disableDependentsState="false" android:summaryOff="Buzz Disabled" android:summaryOn="Buzz Enabled" android:key="b_on" android:title="Enable Buzz"></CheckBoxPreference><PreferenceCategory android:title="Twitter Account" android:dependency="t_on">
		<EditTextPreference android:key="t_user" android:title="User Name"
android:summary="Your twitter screen name"
android:dialogTitle="Enter your Twitter user name" android:dependency="t_on"/>
		<EditTextPreference android:key="t_password" android:title="Password"
android:summary="Your Twitter account password" android:password="true" 
android:dialogTitle="Enter your Twitter password" android:dependency="t_on"/>
	
</PreferenceCategory>
	<PreferenceCategory android:title="Facebook Account" android:dependency="f_on">
		<EditTextPreference android:key="f_user" android:title="User Name"
android:summary="Your twitter screen name"
android:dialogTitle="Enter your Facebook user name" android:dependency="f_on"/>
		<EditTextPreference android:key="f_password" android:title="Password"
android:summary="Your Facebook account password" android:password="true" 
android:dialogTitle="Enter your Facebook password" android:dependency="f_on"/>
	</PreferenceCategory>
	<PreferenceCategory android:title="Buzz Account" android:dependency="b_on">
		<EditTextPreference android:key="b_user" android:title="User Name"
android:summary="Your twitter screen name"
android:dialogTitle="Enter your Buzz user name" android:dependency="b_on"/>
		<EditTextPreference android:key="b_password" android:title="Password"
android:summary="Your Buzz account password" android:password="true" 
android:dialogTitle="Enter your Buzz password" android:dependency="b_on"/>
	
</PreferenceCategory>			

</PreferenceScreen>