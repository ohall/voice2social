<?xml version="1.0" encoding="utf-8"?> 
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFF0"
    >
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/pageTitleMain"
    android:textSize="30px"
    android:gravity="center_horizontal"
    />
    
	<Button
	android:id = "@+id/mediaSelectButton"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="Media Select" 
	/>
	
	<Button
	android:id = "@+id/viewFriends"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="View Friends"
	/>
	<Button
	android:id = "@+id/reviewAndSendButton"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="Review and Send"
	/>
	

</LinearLayout>
